<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">


    <android.support.design.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="2dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                android:id="@+id/user_info_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/feed_user_image_"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#f5f4f4"

                    android:contentDescription="random text"
                    android:src="@drawable/ic_ac_unit_black_24dp" />

                <TextView
                    android:id="@+id/feed_userName_"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/feed_user_image_"
                    android:gravity="center_vertical"
                    android:text="User01"
                    android:textColor="#000"
                    android:textStyle="bold" />






            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/creation_container"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/feed_title"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:text="This is a sample title"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:id="@+id/feed_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:textAlignment="center"

                    android:maxHeight="320dp"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"

                    android:text="Random Text Here" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/creation_container"
                android:orientation="horizontal"
                android:gravity="center"

                android:weightSum="3">

                <TextView
                    android:id="@+id/textView_feed_view_count_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"


                    android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"

                    android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:hint="682"

                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/textView_feed_like_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_thumb_up_black_24dp"
                    android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                    android:text="244"
                    android:gravity="center_vertical"
                    />


                <TextView
                    android:id="@+id/textview_feed_comment_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_mode_comment_black_24dp"
                    android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
                    android:drawablePadding="3dp"
                    android:hint="24" />
                <ImageView
                    android:id="@+id/feed_option_"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_more_vert_black_24dp"

                    />


            </LinearLayout>


        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</LinearLayout>